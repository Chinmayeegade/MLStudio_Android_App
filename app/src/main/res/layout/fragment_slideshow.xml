<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#90EE90"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ml"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Questions"
                android:textColor="#100"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:hint="Ask Away!"
                android:textAlignment="center"
                android:textColor="#100"
                android:textColorHint="#100" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Tags #"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="#6bfff7"
                android:textColorHint="#100" />

            <Button
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Post" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Explore Answered Questions"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#100"
                android:textSize="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="How do I know if my model will run with Windows ml?"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#F10A0A"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Answered by XXXXXX on 25/12/2021"
                android:textColor="#100"
                android:layout_gravity="left"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="The easiest way to check if your model will run with Windows ML is by using the WinML Model Runner tool. Alternatively, you can check ONNX versions and Windows builds for more information on all supported ONNX versions for a given Windows release."
                android:textColor="#100"
                android:textSize="10dp" />

            <Button
                android:layout_width="150dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Upvote this Answer" />

            <Button
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Answer this Question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="How much training data is needed for machine learning?"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#F10A0A"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Answered by XXXXXX on 16/1/2022"
                android:textColor="#100"
                android:layout_gravity="left"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="A simple way to estimate the skill of the model is to split your dataset into two parts (e.g. a 67%/33% train/test split), train on the training set and evaluate on the test set."
                android:textColor="#100"
                android:textSize="10dp" />

            <Button
                android:layout_width="150dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Upvote this Answer" />

            <Button
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Answer this Question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Is it possible to use financial data to learn machine learning?"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#F10A0A"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Answered by XXXXXX on 1/2/2022"
                android:textColor="#100"
                android:layout_gravity="left"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="There is a wealth of financial data available. If you are thinking of using this data to learn machine learning, rather than making money, then this sounds like an excellent idea. Much of the data in finance is in the form of a time series"
                android:textColor="#100"
                android:textSize="10dp" />

            <Button
                android:layout_width="150dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Upvote this Answer" />

            <Button
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Answer this Question" />







        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>